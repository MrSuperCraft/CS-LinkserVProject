      <h1>Background Modification</h1>

      <div class="card-container">
        <div id="colorCard" class="card">
          <h2>Static Color</h2>
          <label for="staticColor">Select Color:</label>
          <input type="color" id="staticColor">
          <button id="apply" onclick="applyStaticColor()">Apply Color</button>
        </div>

        <div id="gradientCard" class="card">
          <h2>Gradient</h2>
          <label for="gradientStart">Start Color:</label>
          <input type="color" id="gradientStart">

          <label for="gradientEnd">End Color:</label>
          <input type="color" id="gradientEnd">

          <label for="gradientDirection">Gradient Direction:</label>
          <select id="gradientDirection">
            <option value="to right">Left to Right</option>
            <option value="to left">Right to Left</option>
            <option value="to bottom">Top to Bottom</option>
            <option value="to top">Bottom to Top</option>
            <option value="to bottom right">Top Left to Bottom Right</option>
            <option value="to bottom left">Top Right to Bottom Left</option>
            <option value="to top right">Bottom Left to Top Right</option>
            <option value="to top left">Bottom Right to Top Left</option>
            <!-- Add more options as needed -->
          </select>

          <div id="gradientPreview" class="preview-container">
            <div id="gradientPreviewInner" class="image-preview"></div>
          </div>

          <button id="apply" onclick="applyGradient()">Apply Gradient</button>
        </div>

        <div id="imageCard" class="card">
